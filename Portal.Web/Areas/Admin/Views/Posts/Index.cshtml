@model IEnumerable<PostViewModel>


@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Slug)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.PostBody)</th>
            <th>@Html.DisplayNameFor(model => model.CommentsNum)</th>
            <th>@Html.DisplayNameFor(model => model.PostImage)</th>
            <th>@Html.DisplayNameFor(model => model.PostVideo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Slug</td>
                <td>@item.CreatedAt</td>
                <td>@item.Title</td>
                <td>@item.PostBody</td>
                <td>@item.CommentsNum</td>
                 <td>
                 <a asp-action="Details" asp-route-id="@item.Id">
                <img src="/img/uploads/@item.PostImage" style="max-height:150px; width:auto; border-radius:5px;" alt="" />
                   </a>
                 </td>

                <td>@item.PostVideo</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa fa-remove" style="font-size:48px;color:red"></i>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
