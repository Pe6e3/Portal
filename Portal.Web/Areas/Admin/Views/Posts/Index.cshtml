@model IEnumerable<PostViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Slug)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.PostId)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.PostBody)</th>
            <th>@Html.DisplayNameFor(model => model.PostImage)</th>
            <th>@Html.DisplayNameFor(model => model.CommentsNum)</th>
            <th>@Html.DisplayNameFor(model => model.PostVideo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Slug</td>
                <td>@item.CreatedAt</td>
                <td>@item.PostId</td>
                <td>@item.Title</td>
                <td>@item.PostBody</td>
                <td>@item.PostImage</td>
                <td>@item.CommentsNum</td>
                <td>@item.PostVideo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PostId">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.PostId">Подробно</a> |
                    <a asp-action="Delete" asp-route-id="@item.PostId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
