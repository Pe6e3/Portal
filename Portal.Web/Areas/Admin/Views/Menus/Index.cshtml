@model IEnumerable<Portal.DAL.Entities.Menu>

@{
    ViewData["Title"] = "Меню";
}

<h1>Меню</h1>

<p><a asp-action="Create">Создать новое меню</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Название меню</th>
            <th>Пункты</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td><a asp-action="IndexMenuItem" asp-controller="MenuItems" asp-route-id="@item.Id" class="btn btn-info">Редактировать пункты меню №@item.Id</a></td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать название меню</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить меню</a>
                </td>
            </tr>
        }
    </tbody>
</table>
