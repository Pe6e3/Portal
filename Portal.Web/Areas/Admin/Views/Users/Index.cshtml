@model IEnumerable<Portal.DAL.Entities.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Login)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th>@Html.DisplayNameFor(model => model.Profile.Firstname)</th>
            <th>@Html.DisplayNameFor(model => model.Profile.Lastname)</th>
            <th>@Html.DisplayNameFor(model => model.Profile.Birthday)</th>
            <th>@Html.DisplayNameFor(model => model.Profile.RegistrationDate)</th>
            <th>@Html.DisplayNameFor(model => model.Profile.AvatarImg)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="centered">
                <td>@Html.DisplayFor(modelItem => item.Login)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>@Html.DisplayFor(modelItem => item.RoleId)</td>
                <td>@Html.DisplayFor(modelItem => item.Profile.Firstname)</td>
                <td>@Html.DisplayFor(modelItem => item.Profile.Lastname)</td>
                <td>@Html.DisplayFor(modelItem => item.Profile.Birthday)</td>
                <td>@Html.DisplayFor(modelItem => item.Profile.RegistrationDate)</td>
                <td><img src="~/img/uploads/Profiles/@item.Profile.AvatarImg" style="max-height:150px; max-width:200px;" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .centered td {
        vertical-align: middle;
    }

</style>