@model Portal.Web.ViewModels.PostViewModel

@{
    ViewData["Title"] = "@Model.Title";
}

<div class="container" style="background-color:aliceblue; padding:20px 40px 20px 40px; border-radius:8px; box-shadow: 0px 2px 7px 3px gray; margin: 10px 5px 20px 5px">
    <div class="row">
        <div class="col-3">
            <img src="/img/uploads/@Model.PostImage" style="max-height:200px; width:100%; border-radius:5px;" alt="" />
            <br />

            <div class="text-muted text-xs" style="font-size:12px;">
                @Html.DisplayFor(model => model.CreatedAt)
                Комментарии (@Html.DisplayFor(model => model.CommentsNum))
            </div>
        </div>
        <div class="col-9 text-center align-self-center">
            <h1>@Model.Title</h1>
        </div>
    </div>


    <hr />
    <div class="row">

        <div class="col-5">
            <div class="col-sm-10 text-center">
                <div style="position: relative; justify-content:center; padding-bottom: 56.25%;">
                    <iframe style="border: solid 5px black; border-radius:5px; position: absolute; top: 0; left: 0; width: 100%; height: 100%;" src="https://www.youtube.com/embed/@Model.PostVideo" title="@Model.Title" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                </div>

            </div>
        </div>

        <div class="col-7">
            @Html.DisplayFor(model => model.PostBody)
        </div>


    </div>
</div>
<div>
    <a asp-action="Index"><i class="fa fa-arrow-circle-left" style="font-size:48px; color: lightblue;"></i></a>

</div>
