@model LoginViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<h1>Регистрация</h1>

<hr />

<div class="container">

<div class="row">
    <div class="col-md-4 mx-auto text-center">


        <form asp-action="Register" enctype="multipart/form-data">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" type="text" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" type="password" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" type="text" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label>
                <input asp-for="Lastname" type="text" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="AvatarFile" class="control-label"></label>
                <input asp-for="AvatarFile" type="file" accept="image/*" class="form-control" />
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
            </div>


            <input type="hidden" asp-for="RegistrationDate" value="@DateTime.Now" class="form-control" />

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>

        </form>
        </div>

    </div>


</div>


