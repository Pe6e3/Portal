@using Portal.DAL.Entities;
@model List<Portal.DAL.Entities.MenuItem>

<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <a href="/" class="header__logo">INFO<span>Portal</span></a>
            </div>
            <div class="col">
                <nav class="header__menu">
                    <ul>
                        @foreach (MenuItem item in Model)
                        {
                            if (item.Slug == ViewBag.CatSlug)
                            {
                                <li style="background-color:#2d2d25; border-radius:3px;">   <a href="/categories/@item.Slug">@item.Name</a> </li>
                            }
                            else
                            {
                                <li>   <a href="/@item.Slug">@item.Name</a> </li>
                            }

                        }
                    </ul>
                </nav>
            </div>
            <div class="col-1">
                <div class="header__search">

                    <div class="header__search-icon">
                        <div class="fa fa-search"></div>
                    </div>

                    <div class="header__search-form">
                        <form action="/search.html">
                            <input type="text" name="q" placeholder="Поиск по сайту" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-1">
                <div class="header__user">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @User.Identity.Name
                    }
                </div>
            </div>
        </div>
    </div>
</header>