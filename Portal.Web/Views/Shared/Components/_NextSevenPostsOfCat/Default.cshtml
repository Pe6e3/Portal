@using Portal.DAL.Entities;
@model List<Portal.DAL.Entities.PostCategory>

@*7 постов из этой категории*@
<div class="cat-list">
    <div class="container">
        <div class="row">

            <div class="col-md-10">

                <div class="cat-list-wrap">

                    <div class="cat-list-wrap">
                        @foreach (Portal.DAL.Entities.PostCategory pc in Model)
                        {
                            <a href="/posts/@pc.Post.Slug" class="cat-list-item">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="pattern" style="width:100%; height: 100%;">
                                            <img src="/img/uploads/Posts/@pc.Post?.Content?.PostImage" alt="Alt" style="width: 100%;height: 100%;object-fit: cover;">
                                        </div>
                                    </div>

                                    <div class="col-sm-9">
                                        <h3>@pc.Post?.Content?.Title</h3>
                                        <div class="date">@pc.Post.CreatedAt</div>
                                        <p>@pc.Post?.Content?.PostBody </p>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>