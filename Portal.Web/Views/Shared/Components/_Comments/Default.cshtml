@using Portal.DAL.Entities;
@model List<Comment>
<div class="comments">

    <h4>Комментарии</h4>

    <div class="comments-last">
        <div class="row">
            @{
                if (Model.Count == 0)
                {
                    <p>Пока нет комментариев</p>
                }
                //else
                @foreach (Comment? comment in Model)
                {
                    <div class="col-5">
                        @comment.UserId
                        <br>
                        @comment.CreatedAt.ToShortDateString()
                    </div>
                    <div class="col-7">
                        @comment.TextComment
                    </div>
                }
            }
        </div>
    </div>
    <hr />

    <div class="comments-form">
        <form asp-controller="Comments" asp-action="AddComment" method="post">
            <input type="hidden" name="postSlug" value="@ViewBag.PostSlug" />
            @*<input type="hidden" name="Url" value="@Model.Post?.Slug" />*@


            @if (!User.Identity.IsAuthenticated)
            {
                <div class="form-group">
                    <label class="control-label">Имя</label>
                    <input name="CommentatorName" class="form-control" />
                </div>
            }

            <div class="form-group">
                <label class="control-label">Сообщение</label>
                <textarea name="Message" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>