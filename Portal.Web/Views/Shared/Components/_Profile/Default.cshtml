@using Portal.DAL.Entities;
@model User


@if (@User.Identity.IsAuthenticated)
{

    <div class="container" style="max-width:200px;">
        <div class="row">
            <div class="col d-flex align-items-center">
                <img src="/img/uploads/Profiles/@Model?.Profile?.AvatarImg" alt="@Model?.Profile?.Firstname @Model?.Profile?.Lastname" style="height:55px; border-radius:5px;" />
                <p class="m-0 ml-2">@Model.Profile.Firstname</p>
                <p class="m-0 mx-2">@Model.Profile.Lastname</p>
                <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-secondary ml-auto">Выйти</a>
            </div>
        </div>
    </div>



}
else
{
    <a asp-action="Login" asp-controller="Account" class="btn btn-outline-warning m-2">Войти</a>
    <a asp-action="Register" asp-controller="Account" class="btn btn-outline-success m-2">Зарегистрироваться</a>
}

