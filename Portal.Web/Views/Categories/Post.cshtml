@using Portal.DAL.Entities;
@model PostViewModel

@{
    ViewBag.Title = Model.Title;
}
@*
<div style="position: relative; justify-content:center; padding-bottom: 56.25%;">
    <iframe style="border: solid 5px black; border-radius:5px; position: absolute; top: 0; left: 0; width: 100%; height: 100%;" src="https://www.youtube.com/embed/@Model.PostVideo" title="@Model.Title" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>*@


<header class="page-header overlay" style="background-image: url('/img/uploads/Posts/@Model.PostImage')">

    <div class="page-header-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-md-8">

                    <div class="page-header-meta">

                        <a href="#" class="page-category-link">cat</a> <span class="date">21/06/2023</span>

                        <h1>@Model.Title</h1>

                        <div class="item-social">
                            <div class="item-comments" title="Количество комментариев">
                                <i class="fa-solid fa-comment"></i><a href="#comments_thread" class="item-comments-count">@Model.CommentsNum</a>
                            </div>
                            <div class="fa-solid fa-share-alt" title="Поделиться в соц. сетях"></div>
                            <div class="likely likely-custom" data-media="/uploads/@Model.PostImage" data-title="@Model.Title">
                                <div class="vkontakte" title="Поделиться Вконтакте">Вконтакте</div>
                                <div class="facebook" title="Поделиться в Facebook">Facebook</div>
                                <div class="twitter" title="Поделиться в Twitter">Twitter</div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

</header>

<div class="article-content">
    <div class="container">
        <div class="row">

            <div class="col-md-9">

                <article class="main-article">

                    <nav class="breadcrumbs">
                        <ul>
                            <li><a href="/">Главная</a></li>
                            <li><a href="category/@Model.Category.Slug">@Model.Category.Name</a></li>
                            <li class="active">@Model.Title</li>
                        </ul>
                    </nav>
                    <div class="article-body">
                        @Html.Raw(Model.PostBody)
                    </div>

                    <div class="likely-on-page">
                        <div class="likely" data-media="/uploads/@Model.PostImage" data-title="@Model.Title">
                            <div class="vkontakte" title="Поделиться Вконтакте">Вконтакте</div>
                            <div class="facebook" title="Поделиться в Facebook">Facebook</div>
                            <div class="twitter" title="Поделиться в Twitter">Twitter</div>
                            <div class="odnoklassniki" title="Класснуть">Класснуть</div>
                            <div class="gplus" title="Плюсануть">Плюсануть</div>
                        </div>
                    </div>



                    @await Component.InvokeAsync("_Comments", new {postSlug=Model.Slug, postId=Model.Id})

                </article>

            </div>

            @*5 последних постов справа в кололке*@
            <div class="col-md-3">
                <aside class="main-aside">
                    <div class="aside-box">
                        @await Component.InvokeAsync("_LastPostsColumn")
                    </div>
                </aside>
            </div>

        </div>
    </div>
</div>